execute pathogen#infect()
set nocompatible

syntax enable
set background=dark
colorscheme solarized
set guifont=Consolas
filetype plugin indent on

set showcmd
set showmode
set hidden

let mapleader=" "
inoremap jk <esc>
vnoremap jk <esc>
nnoremap <leader>ev :e $MYVIMRC<CR>
nnoremap <leader>sv :so $MYVIMRC<CR>

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent

set textwidth=80
set list

set encoding=utf-8

set ruler
set noerrorbells

set wildmenu
